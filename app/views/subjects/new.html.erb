<div class="container">
  <%= current_user.id %>
  <%= current_user.role %>
  <div class="row">
    <% if current_user.teacher_role? %>
      <div>
        <h1>Nueva Materia</h1>
        <p>Escribe la materia que deseas incluir en el currículo escolar</p>
      </div>
        <div class="col col-6">
          <%= simple_form_for(@subject) do |f| %>
            <% @subject.errors.full_messages.each do |error| %>
              <div>
                <%= error %>
              </div>
            <% end %>
            <div class="form-inputs">
              <%= f.input :name, label:"Nombre de la Materia:" %>
            </div>
            <div class="form-actions">
              <%= f.submit "Agregar", class: "btn btn-primary m-3" %>
            </div>
            <div>
              <a class="mb-5"><%= link_to "Regresar", subjects_path, class:"btn btn-link"%></a>
            </div>
          <% end %>
        </div>
    <% else %>
      <div class="col col-6">
        <h3>¡Acceso denegado!</h3>
        <%= link_to "Aceptar", root_path, class:"btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>
