<div class="background-pizarron" style="background-image: url(https://cdn.pixabay.com/photo/2019/06/10/11/35/learning-4264032_960_720.jpg); background-size: cover;">
  <div class="container mt-10">
    <% if current_user.admin_role?%>
    <div class="">
      <h1>Editar Asignatura</h1>
      <p>Modifica la información de esta asignatura</p>
    </div>
      <%= render 'shared/subject_form' %>

      <div class="row g-1 d-flex align-items-end justify-content-end">
        <a class="mb-5"><%= link_to "Regresar", subjects_path, class:"btn btn-link"%></a>
      </div>
    <% else %>
      <div class="row g-1 d-flex align-items-center justify-content-center">
        <h3 class="mb-3">¡Acceso denegado!</h3>
        <%= link_to "Aceptar", root_path, class:"btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>


  <div class="visually-hidden">
    <% if current_user.teacher_role? || current_user.admin_role?%>
      <div>
        <h1>Editar Materia</h1>
        <p>Haz las modificaciones que consideres necesarias</p>
      </div>
        <div class="col col-6">
          <%= simple_form_for(@subject) do |f| %>
            <% @subject.errors.full_messages.each do |error| %>
              <div>
                <%= error %>
              </div>
            <% end %>
            <div class="form-inputs">
              <%= f.input :name, label:"Nombre de la Materia:" %>
            </div>
            <div class="form-actions">
              <%= f.submit "Actualizar", class: "btn btn-primary m-3" %>
            </div>
          <% end %>
        </div>
        <div>
          <a class="mb-5"><%= link_to "Regresar", subjects_path, class:"btn btn-link"%></a>
        </div>
    <% else %>
      <div class="col col-6">
        <h3>¡Acceso denegado!</h3>
        <%= link_to "Aceptar", root_path, class:"btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>
